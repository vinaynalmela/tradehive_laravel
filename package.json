{
  "$schema": "https://www.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format": "prettier --write 'resources/**/*.{blade.php,js,css}'",
    "format:check": "prettier --check 'resources/**/*.{blade.php,js,css}'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.php": "vendor/bin/pint",
    "resources/**/*.blade.php": "prettier --write",
    "resources/**/*.{js,css}": "prettier --write"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.4",
    "concurrently": "^9.0.1",
    "laravel-vite-plugin": "^2.0",
    "tailwindcss": "^4.0.7",
    "vite": "^7.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.9.5",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
    "lightningcss-linux-x64-gnu": "^1.29.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prettier-plugin-blade": "^2.1.21"
  }
}
